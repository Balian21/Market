<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/bootstrap")
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
</head>
<body>
    <div class="container" style="margin-top:10px; border: 1px solid">
        <div class="row">
            <div class="btn-group">
                <button type="button" class="btn btn-default">@Html.ActionLink("Главная", "Index", "Home")</button>
                <button type="button" class="btn btn-default">@Html.ActionLink("Каталог", "Show", "Category")</button>
                <button type="button" class="btn btn-default">Скидки</button>
                <button type="button" class="btn btn-default">Доставка</button>
                <button type="button" class="btn btn-default">Оплата</button>
                <button type="button" class="btn btn-default">Гарантия и возврат</button>
                <button type="button" class="btn btn-default">Контакты</button>
            </div>
        </div>

        <div class="row" style="margin-top:10px; height:650px; border: 1px solid">
            @RenderBody()
        </div>

        <div class="row" style="border: 1px solid">
            <p>Footer</p>
        </div>
            @Scripts.Render("~/bundles/jquery")
            @RenderSection("scripts", required: false)

            <!-- <h3 style="background-color:grey; height:150px;">
                 Site Footer
             </h3>
        -->
        </div>
</body>
</html>