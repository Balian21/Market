<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/bootstrap")
</head>
<body>
    <div class="container" style="margin-top:10px; border: 1px solid">

        <nav class="navbar navbar-inverse">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" href="#">Market-online</a>
                </div>
                <div>
                    <ul class="nav navbar-nav">
                        <li class="active">@Html.ActionLink("Главная", "Index", "Home")</li>
                        <li>@Html.ActionLink("Каталог", "Show", "Category")</li>
                    </ul>
                </div>
            </div>
        </nav>

        <div style="margin-top:10px; height:auto; min-height:700px; border: 1px solid">
            @RenderBody()
        </div>

        <div style="border: 1px solid">
            <p>Footer</p>
        </div>
        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", false)
    </div>
</body>
</html>